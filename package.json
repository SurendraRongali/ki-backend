{
  "name": "krugman-insights-backend",
  "version": "1.0.0",
  "description": "Krugman Insights Backend API for AWS EC2 deployment",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch index.ts",
    "start": "node dist/index.js",
    "build": "tsc && npm run copy-assets && npm run copy-static",
    "copy-assets": "mkdir -p dist/uploads && cp -r uploads/* dist/uploads/ 2>/dev/null || true",
    "copy-static": "mkdir -p dist/shared && cp -r shared/* dist/shared/ 2>/dev/null || true && mkdir -p dist/email-templates && cp -r email-templates/* dist/email-templates/ 2>/dev/null || true",
    "db:push": "drizzle-kit push:pg",
    "db:migrate": "drizzle-kit generate:pg",
    "db:studio": "drizzle-kit studio",
    "production:start": "NODE_ENV=production npm start",
    "test": "echo \"Tests not implemented\" && exit 0"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.4",
    "@sendgrid/mail": "^8.1.0",
    "aws-sdk": "^2.1691.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "connect-pg-simple": "^9.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.4",
    "drizzle-zod": "^0.5.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "html-pdf-node": "^1.0.8",
    "mailgun.js": "^9.4.1",
    "memoizee": "^0.4.15",
    "memory-cache": "^0.2.0",
    "memorystore": "^1.6.7",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.3.2",
    "openai": "^4.20.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-linkedin-oauth2": "^2.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "postmark": "^4.0.2",
    "puppeteer": "^21.6.1",
    "resend": "^3.2.0",
    "stripe": "^14.21.0",
    "twilio": "^4.19.3",
    "validator": "^13.11.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4",
    "zod-validation-error": "^2.1.0"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/html-pdf-node": "^1.0.2",
    "@types/memoizee": "^0.4.11",
    "@types/multer": "^1.4.11",
    "@types/multer-s3": "^3.0.3",
    "@types/node": "^20.11.30",
    "@types/node-fetch": "^2.6.9",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.11.2",
    "@types/validator": "^13.11.9",
    "@types/ws": "^8.5.10",
    "drizzle-kit": "^0.20.14",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}